@using Microsoft.AspNetCore.Mvc.Localization
@model Medal
@inject IViewLocalizer ViewLocalizer
@{
	ViewBag.Title = ViewLocalizer["编辑勋章 - {0}", Model.Name];
}

<form class="ui form" asp-controller="Medal" asp-action="Edit" method="post" asp-antiforgery="true">

	<div class="ui centered grid">
		<div class="eight wide column">

			<partial name="_EditPartial" />

			<div class="ui divider"></div>

			<error-summary title="你提交的数据中包含错误" />

			<button type="submit" class="ui primary button">修改勋章</button>
			<button type="reset" class="ui secondary button">撤销更改</button>
		</div>
	</div>

</form>


@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
	<partial name="_VuePartial" />
	<partial name="_AjaxPartial" />
	<partial name="_UploadPartial" />
}
