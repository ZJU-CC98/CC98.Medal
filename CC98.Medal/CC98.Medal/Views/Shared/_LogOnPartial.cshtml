
@if (User.Identity.IsAuthenticated)
{
	<form id="log-off-form" asp-controller="Account" asp-action="LogOff" method="post" asp-antiforgery="true"></form>

	<span class="navbar-text"><strong>@User.Identity.Name</strong></span>
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link text-dark" href="#" onclick="$('#log-off-form').submit();">注销</a>
		</li>
	</ul>
}
else
{
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="LogOn" asp-route-returnUrl="@Url.Action()">登录</a>
		</li>
	</ul>
}